<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.XCards" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/gray</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="roundedUpperLeftEdgeCard" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.UpperLeftRoundEdge</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.UpperLeftRoundEdge" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">190dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="roundedUpperRightEdgeCard" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.UpperRightRoundEdge</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.UpperRightRoundEdge" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">190dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="timePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/sky_blue</item>
        <item name="colorControlActivated">@color/sky_blue</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="background">
        <item name="android:background">@color/white</item>
    </style>

    <style name="imageOnMainScreen">
        <item name="android:src">"@drawable/snow_covered_mountains"</item>
    </style>

    <style name="searchingViewStyle">
        <item name="android:backgroundTint">@color/azure</item>
    </style>

    <style name="backgroundColor">
        <item name="android:background">@color/blue</item>
    </style>

    <style name="linedView">
        <item name="android:background">@color/black</item>
    </style>

    <style name="grayTextStyle">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="miniGrayTextStyle">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="editTextStyle">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:colorControlActivated">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="mainTextStyle">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">44sp</item>
    </style>

    <style name="textStyle_h1">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="textStyle_h2">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="largeImmutableTextStyle">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">44sp</item>
    </style>

    <style name="bigImmutableTextStyle">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">33sp</item>
    </style>

    <style name="immutableTextStyle">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="bigTextStyle">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="textStyle">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="miniTextStyle">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="immutableMiniTextStyle">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="error">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="radioButtonStyle">
        <item name="android:buttonTint">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>